{
  "name": "foundationx",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "libs/*"
    ],
    "nohoist": [
      "**/@nestjs",
      "**/@nestjs/**"
    ]
  },
  "scripts": {
    "build": "yarn exec nx run-many --target=build",
    "format": "prettier  \"{apps,libs}/**/*.{ts,tsx,js,json}\" --ignore-path .gitignore",
    "format:check": "yarn format --check",
    "format:write": "yarn format --write",
    "lint": "yarn exec nx run-many --target=lint",
    "tsc": "yarn exec nx run-many --target=tsc",
    "validate": "yarn format:write  && yarn lint",
    "prepare": "husky install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "husky": "^8.0.0",
    "lint-staged": "^15.2.0",
    "nx": "17.2.7",
    "prettier": "^2.8.8"
  }
}
